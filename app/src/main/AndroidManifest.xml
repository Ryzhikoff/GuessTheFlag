<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icon2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.GuessTheFlag"
        tools:targetApi="31">
        <activity
            android:name=".view.activity.GameMainActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".view.activity.StatisticActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".view.activity.MenuActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".view.activity.RatingActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".view.activity.GreetingActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>